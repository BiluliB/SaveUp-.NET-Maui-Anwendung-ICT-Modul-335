<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SaveUp.ViewModels"
             x:Class="SaveUp.Views.MainPage"
             x:Name="MainPageView">

    <Grid Padding="10" RowDefinitions="Auto, Auto, *" BackgroundColor="White">
        <!-- Titel -->
        <Label Text="SaveUp" 
               Margin="0,0,0,10"
               FontSize="Large" 
               HorizontalOptions="Center" 
               Grid.Row="0" />

        <!-- Fehlermeldung -->
        <Label Text="{Binding ErrorMessage}"
               TextColor="Red"
               HorizontalOptions="Center"
               IsVisible="{Binding IsErrorVisible}"
               Grid.Row="1" />

        <!-- Einsparungen heute -->
        <StackLayout Grid.Row="2" VerticalOptions="FillAndExpand" Spacing="0" Margin="15,10,15,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Text="Einsparungen heute:"
                       Margin="0,0,0,10"
                       FontSize="Medium"
                       VerticalOptions="Center"
                       Grid.Column="0"/>
                <Label Text="{Binding HeuteGespartBetragText}"
                       FontSize="Medium"
                       FontAttributes="Bold"
                       Margin="10,0,0,0"
                       VerticalOptions="Center"
                       Grid.Column="1"/>
            </Grid>

